{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist/server",
        "rootDir": "./server",
        "noEmit": false,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": ["server/**/*.ts", "shared/**/*.ts"],
    "exclude": ["node_modules", "dist", "src/**/*"]
}