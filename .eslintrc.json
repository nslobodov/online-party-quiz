{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "commonjs"
  },
  "rules": {
    "no-console": "warn",
    "no-unused-vars": "warn"
  },
  "ignorePatterns": ["node_modules/**", "public/**"]
}